{
    "name": "lkrms/pretty-php",
    "description": "The opinionated PHP code formatter",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/lkrms/pretty-php/issues",
        "source": "https://github.com/lkrms/pretty-php"
    },
    "authors": [
        {
            "name": "Luke Arms",
            "email": "luke@linacreative.com"
        }
    ],
    "bin": [
        "bin/pretty-php"
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-tokenizer": "*",
        "composer-runtime-api": "^2.2",
        "lkrms/util": "^0.20.87",
        "sebastian/diff": "^4 || ^5"
    },
    "autoload": {
        "psr-4": {
            "Lkrms\\PrettyPHP\\": "src/"
        },
        "files": [
            "bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Lkrms\\PrettyPHP\\Tests\\": "tests/unit/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "platform": {
            "php": "7.4.33"
        }
    },
    "require-dev": {
        "phpstan/extension-installer": "^1",
        "phpstan/phpstan": "^1",
        "phpstan/phpstan-deprecation-rules": "^1",
        "phpunit/phpunit": "^9"
    }
}
