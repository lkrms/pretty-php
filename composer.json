{
    "name": "lkrms/pretty-php",
    "description": "Just another PHP formatter",
    "bin": [
        "bin/pretty-php"
    ],
    "require": {
        "php": ">=7.4,<8.2",
        "lkrms/util": "^0.18.7"
    },
    "autoload": {
        "psr-4": {
            "Lkrms\\Pretty\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "require-dev": {
        "phpstan/extension-installer": "^1",
        "phpstan/phpstan": "^1",
        "phpstan/phpstan-deprecation-rules": "^1",
        "phpunit/phpunit": "^9"
    }
}
