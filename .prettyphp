{
    "src": [
        "bin/pretty-php",
        "scripts",
        "src",
        "tests/integration",
        "tests/unit",
        "tests/phpstan-conditional.php",
        "tools/apigen/src",
        ".php-cs-fixer.dist.php",
        "bootstrap.php"
    ],
    "enable": [
        "align-chains",
        "align-comments",
        "align-fn",
        "preserve-one-line",
        "semi-strict-expressions",
        "strict-lists"
    ],
    "operatorsFirst": true,
    "tight": true,
    "heredocIndent": "none"
}
