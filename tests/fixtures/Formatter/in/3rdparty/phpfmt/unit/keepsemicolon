<?php

$menu    = [];
$recurse = function ($parent, $path) use (&$recurse, &$menu, $res) {
    foreach ($res as $v) {
        if ($v['parent'] == $parent) {
            $name           = "$path/{$v['name']}";
            $menu[$v['id']] = $name;
            $recurse($v['id'], $name);
        }
    }
}; // this semicolon should not be removed
$recurse(0, '');
